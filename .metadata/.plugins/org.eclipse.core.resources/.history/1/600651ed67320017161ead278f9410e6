import java.net.InetAddress;
import java.util.HashMap;
import java.util.Map;
import java.util.Random;
import java.util.Vector;



public class Field {
	private int[][] field;
	private HashMap<InetAddress,Player> players;

	public Field() {
		super();
		
		this.field = new int[Constants.fieldLength][Constants.fieldWidth];
		this.players = new HashMap<InetAddress,Player>();
	}

	public Player getPlayer(InetAddress address) {
		if(players.containsKey(address)){
			return players.get(address);
		}
		Random rand = new Random();
		Player player=new Player(rand.nextInt(Constants.fieldLength), rand.nextInt(Constants.fieldWidth));
		players.put(address, player);
		return player;
	}
}
